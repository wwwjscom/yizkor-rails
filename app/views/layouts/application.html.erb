<html>
  <head>
    <title>Yizkor Book Search</title>
    <meta name="Inquery" content="noindex">
    <%= stylesheet_link_tag 'application' %>
    <%= javascript_include_tag :defaults %>
    <%= javascript_include_tag "prototype" %>

  </head>

  <body bgcolor="#D3D5C3" topmargin="0" leftmargin="0" marginwidth="0" marginheight="0">



    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <!-- left menu -->
        <td width="262" valign="top">
          <meta name="Inquery" content="noindex">

          <table style="width: 262px; border-style: solid solid solid none; border-width: 1px; border-color: #FFFFFF; background-color: #E9E2AD;" cellpadding="0" cellspacing="0">
            <tr>
              <td style="padding: 0 0 0 7;">
                &nbsp;<br>

              </td>
            </tr>

            <tr>
              <td align="right" style="padding: 19 13 20 7;">

                <%= link_to 'Search', search_path, { :class => 'arial Text11 MenuLink' } %><br />
                <%= link_to 'All Books',  books_path, { :class => 'arial Text11 MenuLink' }   %><br />
                <%= link_to 'All Locations',  locations_path, { :class => 'arial Text11 MenuLink' }   %><br />
                <%= link_to 'Add Book', new_book_path, { :class => 'arial Text11 MenuLink' } %><br />
                <%= link_to 'Status', { :controller => 'admins', :action => 'status' } , { :class => 'arial Text11 MenuLink' } %><br />
                ---<br />
                <% if session[:admin] %>
                  <%= link_to 'Logout', logout_admins_path, { :class => 'arial Text11 MenuLink' }, :method => :get %><br />
                  <%= link_to 'Keywords', keywords_admins_path, { :class => 'arial Text11 MenuLink' }, :method => :get %><br />
                  <%= link_to 'Locations', locations_admins_path, { :class => 'arial Text11 MenuLink' }, :method => :get %><br />
                  <%= link_to 'Subjects', subjects_admins_path, { :class => 'arial Text11 MenuLink' }, :method => :get %><br />
                <% else %>
                <%= link_to 'Login', { :controller => 'admins'} , { :class => 'arial Text11 MenuLink' } %><br />
                <% end %>
              </td>
            </tr>
          </table>

          <img src="http://www.ushmm.org/images/spacer.gif" width="262" height="1" alt=""><br>

          <br><br>
        </td>

        <td valign="top">
          <br>

          <!-- content -->
          <table width="600" style="margin: 0 8 0 28;" border="0" cellspacing="0" cellpadding="0" ><tr><td><span class="Text40 arial white">Y</span><span class="Text30 arial white"><b>IZKOR</b> </span><span class="Text40 arial white">B</span><span class="Text30 arial white"><b>OOKS</b></span><br></td></tr>

            <tr><td valign="bottom" style="padding: 0 15 40 0;" colspan="2">
                <span class="Textheight"><span class="Text14"><span class="arial"><span class="brown">
                        <br> </span></span></span></span>

                <% if flash[:notice] -%>
                  <div id='notice'><%= flash[:notice] %></div>
                <% elsif flash[:warning] -%>
                  <div id='warning'><%= flash[:warning] %></div>
                <% elsif flash[:success] -%>
                  <div id='success'><%= flash[:success] %></div>
                <% end -%>
          <%= yield %>

            </td></tr>
          </table>


          <!-- google analytics -->
            <script type="text/javascript">
              var gaJsHost = (("https:" == document.location.protocol) ? "https://ssl." : "http://www.");
              document.write(unescape("%3Cscript src='" + gaJsHost + "google-analytics.com/ga.js' type='text/javascript'%3E%3C/script%3E"));
            </script>
            <script type="text/javascript">
              try {
                var pageTracker = _gat._getTracker("UA-3590983-10");
                pageTracker._trackPageview();
              } catch(err) {}
            </script>
          <!-- /google analytics -->


        </body>

      </html>
