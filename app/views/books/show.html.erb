<ul class="horizontal_list">
  <li><%= link_to 'All', books_path %></li>
  <% if session[:admin].blank? %>
    <li><%= link_to 'Login to do more', :controller => 'admins', :action => 'index' %></li>
  <% else %>
    <li><%= link_to 'Add details', add_details_path(@book) %></li>
    <li><%= link_to 'Edit', edit_book_path(@book) %></li>
    <li><%= link_to 'New book', new_book_path %></li>
    <li><%= link_to 'Destroy', @book, :confirm => 'Are you sure?', :method => :delete %></li>
    <li><%= link_to 'Logout', :controller => 'admins', :action => 'logout' %></li>
  <% end %>
</ul>

<div class="book_results">
<center><h1 class="book_title"><%=h @book.title.capitalize %></h1></center>

<p>
  <b>Alternative Titles:</b>
  <% @book.alt_title.each do |t| %>
    <%= t.title %><br />
  <% end %>
</p>

<p>
  <b>Call Numbers:</b>
  <% @book.call_num.each do |c| %>
    <%= c.call_num %><br />
  <% end %>
</p>

<p>
  <b>Subjects:</b>
  <%= @book.subjects %>
</p>

<p>
  <b>Pages:</b>
  <%= @book.pages %>
</p>



<p>
  <b>Description:</b>
  <%=h @book.description %>
</p>


<p>
  <b>Publication year:</b>
  <%=h @book.publication_year %>
</p>

<p>
  <b>Publication place:</b>
  <%=h @book.publication_place %>
</p>

<p>
  <b>Historical period:</b>
  <%=h @book.historical_period %>
</p>



</div>
<div class="book_results">
<p>
  <b>Has necrology:</b>
  <%=h @book.has_necrology %>
</p>

<p>
  <b>Has toc:</b>
  <%=h @book.has_toc %>
</p>

<p>
  <b>Has index:</b>
  <%=h @book.has_index %>
</p>

</div>
<div class="book_results">


<p>
