<fieldset>
  <legend>Add Keyword</legend>
  <% form_for @keyword do |f| %>

    <input type="hidden" id="keyword_book_id" name="keyword[book_id]" value="<%= params[:id] %>" />

    <p>
    <%= select :keyword, :title_id, KeywordType.find(:all).collect { |k| [k.title, k.id] } %>
    </p>

    <p>
    <%= f.submit :Add %>
    </p>
  <% end %>
</fieldset>
