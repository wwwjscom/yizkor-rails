<% form_for(@contributor) do |f| %>
  <%= f.error_messages %>

  <input type="hidden" id="contributor_book_id" name="contributor[book_id]" value="<%= params[:id] %>" />
  <p>
    <%= f.label :first %>
    <%= f.text_field :first %>
  </p>
  <p>
    <%= f.label :last %>
    <%= f.text_field :last %>
  </p>
