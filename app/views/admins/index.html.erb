<% form_tag '/admins/index' do %>
  <fieldset>
    <legend>Login</legend>
    <p>
    <%= label_tag 'username', 'Username' %>
    <%= text_field_tag 'username' %>
    </p>
    <p>
    <%= label_tag 'password', 'Password' %>
    <%= password_field_tag 'password' %>
    </p>
    <p>
    <%= submit_tag 'Login' %>
    </p>
  </fieldset>
<% end %>
